{
  "name": "@scrider/formatter",
  "version": "1.0.1",
  "description": "Delta converters and block handlers for rich-text content",
  "author": "Pavel Sukharev",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "NOTICE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scrider-apps/scride-formatter.git"
  },
  "homepage": "https://github.com/scrider-apps/scride-formatter#readme",
  "bugs": {
    "url": "https://github.com/scrider-apps/scride-formatter/issues"
  },
  "keywords": [
    "delta",
    "rich-text",
    "html",
    "markdown",
    "schema",
    "conversion",
    "sanitize",
    "block-handler",
    "text-editor"
  ],
  "dependencies": {
    "@scrider/delta": "^1.0.0"
  },
  "peerDependencies": {
    "jsdom": ">=20.0.0",
    "remark-gfm": ">=4.0.0",
    "remark-math": ">=6.0.0",
    "remark-parse": ">=11.0.0",
    "remark-stringify": ">=11.0.0",
    "unified": ">=11.0.0"
  },
  "peerDependenciesMeta": {
    "jsdom": {
      "optional": true
    },
    "remark-gfm": {
      "optional": true
    },
    "remark-math": {
      "optional": true
    },
    "remark-parse": {
      "optional": true
    },
    "remark-stringify": {
      "optional": true
    },
    "unified": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@scrider/delta": "^1.0.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^25.2.3",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "jsdom": "^25.0.0",
    "prettier": "^3.2.0",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.0.0",
    "unified": "^11.0.0",
    "vitest": "^1.2.0"
  }
}
